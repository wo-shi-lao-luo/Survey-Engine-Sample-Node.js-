<!DOCTYPE html>
<html>
<head>
	<title>Delete All</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
	<script type="text/javascript">
		function redirect() {

			var xhr = new XMLHttpRequest();
			xhr.open("POST", '/delete_all', true);
			xhr.setRequestHeader('Content-Type', 'application/json');
			xhr.send(JSON.stringify({
			    delete: "delete"
			}));

			document.getElementById('buttons').style.display = "none";
			document.getElementById('someText').style.display = "block";
			var redirect_p = document.getElementById('redirect');
			var n = 10;
			countDown();
			function countDown(){
				if(n >= 0){
					redirect_p.innerHTML = "Redirect your browser in " + n + " seconds......"; 
					setTimeout(countDown,1000);
				} else {
					window.location.href = "/record";
				}
				n--;
			}
		}
	</script>
</head>
<body>
	<div style="text-align: center;">
		<h1 style="margin-top: 30vh">ARE YOU SURE YOU WANT TO DELETE ALL RECORDS?</h1>

		<br><br><br>

		<div id="buttons">
			<button class="btn btn-danger" style="text-align: right; margin-right: 5em; width: 8em; text-align: center;" onclick="redirect(); return;">Yes</button>
			<button onclick="window.location.href='/record'" class="btn btn-primary" style="text-align: right; width: 8em; text-align: center;">No</button>
		</div>

		<h2 id="someText" style="display: none; font-weight: bold;">
			Deleting Data...... <br>
			If the record is not updated after delete, please refresh page in a few minutes <br>
		</h2>
		<h2 id="redirect" style="font-weight: bold;"></h2>

	</div>
</body>
</html>